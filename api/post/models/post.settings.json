{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "minLength": 1
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 1
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "article",
        "news",
        "announcement",
        "event",
        "promotion"
      ]
    },
    "postDynamic": {
      "type": "dynamiczone",
      "components": [
        "post.image",
        "post.quote",
        "post.rich-text"
      ]
    },
    "author": {
      "model": "author"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
